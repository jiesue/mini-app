/* pages/chat/chat.wxss */

.chat-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.chatList-w {
  position: absolute;
  top: 0;
  bottom: 151rpx;
  width: 100%;
  box-sizing: border-box;
  padding:15rpx;
}

.item {
  width: 100%;
  display: flex;
  margin-top:43rpx;
  /* align-items: flex-start; */
}

.item.left {
  justify-content: flex-start;
}

.item.right {
  justify-content: flex-end;
  /* flex-direction: row-reverse; */

}

.avatar-w {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-w image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.text {
  
  padding:17rpx;
  max-width: 63%;
  border-radius: 25rpx;
  border: 1px solid rgba(246, 246, 246, 1);
 
}
.item.item.left .text{
  background: rgba(239, 239, 239, 1);
   margin-left: 10rpx;
   color: #333333;
}
.item.right .text{
  background: #F5576C;
  margin-right: 10rpx;
  color:#fff;
}


.input-w {
  width: 100%;
  height: 150rpx;
  position: absolute;
  bottom: 0;
  background: #fff;
}

.input-w input {
  position: absolute;
  left: 35rpx;
  top: 28rpx;
  width: 680rpx;
  height: 90rpx;
  border-radius: 50rpx;
  background: #fff;
  box-shadow: #eee 0rpx 0rpx 40rpx 40rpx;
  box-sizing: border-box;
  padding: 0 90rpx 0 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.send {
  position: absolute;
  right: 60rpx;
  top: 50rpx;
  width: 42rpx;
  height: 42rpx;
}
