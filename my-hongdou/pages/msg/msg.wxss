/* pages/msg/msg.wxss */
.msg{
    position: relative;
    padding-top:150rpx;
}
.msgList {
    width: 100%;
    height: auto;
}

.item {
    width: 100%;
    height: 100rpx;
    border-bottom: 2rpx solid #eee;
    text-align: center;
    line-height: 100rpx;
    font-size: 30rpx;
    color: red;
}

.addFriend {
    position: fixed;
    background: #fff;
    width: 100%;
    top:0;
    text-align: center;
}

.addFriend input {
    vertical-align: middle;
    display: inline-block;
    width: 300rpx;
    height: 50rpx;
    background: #eee;
    padding-left: 10rpx;
    border-radius: 30rpx;
}

.addFriend text {
    vertical-align: middle;
}
.addFriend button{
    width: 30%;
    margin-top: 10rpx;
}
