/* pages/realname/realname.wxss */.user-suggest{
  margin-top: 50rpx;
}
.suggest-title {
  font-size: 16px;
  font-weight: 500;
  color: rgba(8, 8, 8, 1);
  box-sizing: border-box;
  padding-left: 32rpx;
}

.suggest-top {
  width: 690rpx;
  height: 292rpx;
  background:rgba(248,248,248,1);
  border-radius: 10px;
  margin: 0 auto;
  display: block;
  margin-top: 20rpx;
  padding: 39rpx 62rpx 39rpx 39rpx;
  box-sizing: border-box;
  margin-bottom: 48rpx;
}

.place-holder {
  color: rgba(199, 198, 202, 1);
  font-size: 15px;
}

.suggest-top textarea {
  font-size: 15px;
  line-height: 20rpx;
}

.suggest-tel {
  width: 690rpx;
  height: 84rpx;
  background:rgba(248,248,248,1);
  border-radius: 10px;
  margin: 0 auto;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding-left: 31rpx;
  font-size:15px;
  margin-bottom: 38rpx;
}

.suggest-tel input {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  border-radius: 40px;
  display: block;
}

.upload-box{
  padding-top: 28rpx;
  width: 690rpx;
  margin: 0 auto;
  
}
.upload-box .upload-btn{

}
.upload-btn .upload-btn-img{
  width: 220rpx;
  height: 220rpx;
}
.upload-box .upload-list{
  width:220rpx;
  height:220rpx;
  margin-right: 15rpx;
}
.upload-box .upload-list:last-child{
  margin-right: 0;
}
.upload-list .upload-list-img{
  width:220rpx;
  height:220rpx;
  border-radius: 10px;
}
.upload-list .close-img{
  width: 36rpx;
  height: 36rpx;
  right: -10rpx;
  top: -10rpx;
}
.suggest-btn {
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(245,87,108, 0.5);
  border-radius: 44px;
  margin: 0 auto;
  margin-top: 132rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  font-size: 34rpx;
}

.active {
  background: #f5576c;
}
