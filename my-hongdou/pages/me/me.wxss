/* pages/me/me.wxss */

.me {
    width: 100%;
    height: 100%;
    position: relative;
}

.top-bg {
    width: 750rpx;
    height: 140rpx;
    background: rgba(245, 87, 108, 1);
    border-radius: 0px 0px 40rpx 40rpx;
}

.info-w {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 690rpx;
    height: 220rpx;
    right: 0;
    left: 0;
    top: 22rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 1rpx 9rpx 13rpx 0rpx rgba(159, 159, 159, 0.09);
    border-radius: 30rpx;
    border: 1px solid green;
    margin: 0 auto;
}
.avatar-w {
    width: 146rpx;
    height: 146rpx;
    /* border: 2rpx solid rgba(255, 57, 57, 1); */
    border-radius: 73rpx;
}

.avatar-w image {
    width: 146rpx;
    height: 146rpx;
    border-radius: 50%;
}
.info-w .text-w{
    width: 300rpx;
    height: 220rpx;
    border:1px solid red;
    margin-left: 30rpx;
    text-align: center;
}
.info-w  .operate{
      width: 100rpx;
    height: 220rpx;
    border:1px solid red;
    margin-left: 30rpx;
}

.menu {
    position: absolute;
    top: 300rpx;
    margin: 0 auto;
    width: 669rpx;
    right: 0;
    left: 0;
    height: 535rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 27rpx 0px rgba(159, 159, 159, 0.14);
    border-radius: 36rpx;
}

