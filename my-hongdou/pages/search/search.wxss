/* pages/search/search.wxss */

.input-area {
    position: relative;
    width: 100%;
    height: 65rpx;
    margin-top: 22rpx;
}

.input-area button {
    position: absolute;
    top: 2rpx;
    right: 10rpx;
    width: 126rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #fff;
    border-radius: 30rpx;
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #ccb6b6;
    border: 2rpx solid #ccb6b6;
}

.input-area button.active {
    color: rgba(245, 87, 108, 1);
    border: 2rpx solid rgb(236, 66, 80);
}

.input-w {
    position: absolute;
    left: 35rpx;
    width: 547rpx;
    height: 65rpx;
    background: rgba(244, 244, 244, 1);
    border-radius: 12rpx;
}

.input-w input {
    position: absolute;
    left: 80rpx;
    width: 400rpx;
    height: 65rpx;
}

.input-w icon:nth-of-type(1) {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
}

.input-w icon:nth-of-type(2) {
    position: absolute;
    top: 18rpx;
    right: 15rpx;
}

.history {
    width: 100%;
    margin-top: 39rpx;
    padding: 0 23rpx;
}

.history .title {
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: rgba(45, 38, 38, 1);
}

.history-list {
    width: 100%;
}

.history-list .item {
    height: 94rpx;
    width: 100%;
    line-height: 94rpx;
    border-bottom: 2rpx solid #eee;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: rgba(45, 38, 38, 1);
}
